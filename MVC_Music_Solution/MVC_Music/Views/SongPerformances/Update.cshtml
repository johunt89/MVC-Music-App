@model MVC_Music.Models.Performance

@{
    ViewData["Title"] = "Update Performance";
}

<h1>Update Performance for Song: @Model.Song.Title</h1>

<hr />
<form asp-action="Update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <input type="hidden" asp-for="ID" />
            <input type="hidden" name="SongID" value="@Model.SongID" />
            <div class="form-group">
                <label asp-for="MusicianID" class="control-label"></label>
                <select asp-for="MusicianID" class="form-control" asp-items="ViewBag.MusicianID">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="InstrumentID" class="control-label"></label>
                <select asp-for="InstrumentID" class="form-control" asp-items="ViewBag.InstrumentID">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeePaid" class="control-label"></label>
                <input asp-for="FeePaid" class="form-control" />
                <span asp-validation-for="FeePaid" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="SongID" />
            <input type="hidden" asp-for="MusicianID" />
            <input type="hidden" asp-for="InstrumentID" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </div>
    </div>
</form>
<div>
    <a href="'@ViewData["returnURL"]'>Back to Song</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
